    0033 : 1b34 ; -- <0090> "
    0034 : 0006 ; -- <0091> a = g6
    0035 : fba0 ; -- <0092> call put4x
    0036 : 00ac ; -- <0092> "
    0037 : fc00 ; -- <0092> "
    0038 : 023d ; -- <0093> a = 61 -- putasc "="
    0039 : fba0 ; -- <0093> putasc "="
    003a : 0092 ; -- <0093> "
    003b : fc00 ; -- <0093> "
