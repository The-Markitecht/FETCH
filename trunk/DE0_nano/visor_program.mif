    0057 : e00f ; -- <0112> jmp :halt
    0058 : 0057 ; -- <0112> "

-- set a breakpoint, wait til it hits.
    0059 : 2615 ; -- <0115> bp0_addr = 0x15
-- :main_loop -- = 0x005a
    005a : fba0 ; -- <0117> call :wait_for_bp
    005b : 008c ; -- <0117> "
    005c : fc00 ; -- <0117> "

-- observe a register.
    005d : 3e04 ; -- <0120> bus_ctrl = $divert_code_bus_mask
    005e : 4201 ; -- <0121> tg_force = $hold_state_mask
    005f : d283 ; -- <0122> fetch force_opcode from ([label observe] + 7)
    0060 : 37b0 ; -- <0122> "
    0061 : 4203 ; -- <0123> tg_force = ($hold_state_mask | $force_load_exr_mask)
    0062 : 4205 ; -- <0124> tg_force = ($hold_state_mask | $force_exec_mask)
    0063 : 4201 ; -- <0125> tg_force = $hold_state_mask
-- target's r7 value is now in peek_data.

-- refill target exr so it can resume seamlessly.
    0064 : 3415 ; -- <0129> force_opcode = exr_shadow
    0065 : 4203 ; -- <0130> tg_force = ($hold_state_mask | $force_load_exr_mask)
    0066 : 4200 ; -- <0131> tg_force = 0
    0067 : 3e00 ; -- <0132> bus_ctrl = 0

-- interrupt the target and single step it a few times.
    0068 : 3e08 ; -- <0135> bus_ctrl = $bp_step_mask
    0069 : fba0 ; -- <0136> call :wait_for_bp
    006a : 008c ; -- <0136> "
    006b : fc00 ; -- <0136> "
    006c : 2409 ; -- <0137> bp0_addr = bp0_addr
    006d : fba0 ; -- <0138> call :wait_for_bp
    006e : 008c ; -- <0138> "
    006f : fc00 ; -- <0138> "
    0070 : 2409 ; -- <0139> bp0_addr = bp0_addr
    0071 : fba0 ; -- <0140> call :wait_for_bp
    0072 : 008c ; -- <0140> "
    0073 : fc00 ; -- <0140> "
    0074 : 2409 ; -- <0141> bp0_addr = bp0_addr
