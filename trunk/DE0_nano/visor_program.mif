-- putasc T
-- getchar
-- b = 1
-- nop
-- a = a+b
-- putchar a

-- :next_load -- = 0x0005

-- load target program from UART.
-- length, little-endian.  memorize in x.
    0005 : 024c ; -- <0076> a = 76 -- putasc L
    0006 : fba0 ; -- <0076> putasc L
