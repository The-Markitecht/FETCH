    004d : c800 ; -- <0103> nop
    004e : e407 ; -- <0104> bn eq :loadword
    004f : 001c ; -- <0104> "

-- release target reset, to run.
    0050 : 0252 ; -- <0107> a = 82 -- putasc R
    0051 : fba0 ; -- <0107> putasc R
    0052 : 0092 ; -- <0107> "
    0053 : fc00 ; -- <0107> "
    0054 : 3e00 ; -- <0108> bus_ctrl = 0
    0055 : e00f ; -- <0109> jmp :next_load
