-- release target to pass breakpoint once.
    0079 : 2409 ; -- <0146> bp0_addr = bp0_addr

    007a : e00f ; -- <0148> jmp :main_loop
    007b : 005a ; -- <0148> "

-- :observe -- = 0x007c
-- these instructions are assembled in the visor program, but passed to the target to execute.
    007c : 7c00 ; -- <0153> debug_peek_reg = r0
    007d : 7c01 ; -- <0154> debug_peek_reg = r1
    007e : 7c02 ; -- <0155> debug_peek_reg = r2
    007f : 7c03 ; -- <0156> debug_peek_reg = r3
    0080 : 7c04 ; -- <0157> debug_peek_reg = r4
    0081 : 7c05 ; -- <0158> debug_peek_reg = r5
    0082 : 7c06 ; -- <0159> debug_peek_reg = r6
    0083 : 7c07 ; -- <0160> debug_peek_reg = r7
    0084 : 7c08 ; -- <0161> debug_peek_reg = r8
    0085 : 7c09 ; -- <0162> debug_peek_reg = r9
    0086 : 7c0a ; -- <0163> debug_peek_reg = r10
    0087 : 7c0b ; -- <0164> debug_peek_reg = r11
    0088 : 7c0c ; -- <0165> debug_peek_reg = r12
    0089 : 7c0d ; -- <0166> debug_peek_reg = r13
    008a : 7c0e ; -- <0167> debug_peek_reg = r14
    008b : 7c0f ; -- <0168> debug_peek_reg = r15

    008c : 0200 ; -- <0171> a = 0
    008d : 0418 ; -- <0172> b = bp_status
    008e : c800 ; -- <0173> nop
    008f : e004 ; -- <0174> br z :wait_for_bp
    0090 : 008c ; -- <0174> "
    0091 : fc00 ; -- <0175> return


-- routine sends out the low byte from a to the UART.  blocks until the UART accepts the byte.
    0092 : 2004 ; -- <0179> push x -- func putchar_atx

    0093 : 1000 ; -- <0181> x = a

-- wait for UART to be idle (not busy).
    0094 : 0202 ; -- <0184> a = $atx_busy_mask
-- :pcatx_wait_for_idle -- = 0x0095
    0095 : 0412 ; -- <0186> b = atx_ctrl
    0096 : c800 ; -- <0187> nop
    0097 : e402 ; -- <0188> bn and0z :pcatx_wait_for_idle
    0098 : 0095 ; -- <0188> "

-- push word to the UART.  its low byte is a character.
    0099 : 4404 ; -- <0191> atx_data = x

-- can't use the actual register load strobe that occurs here, because it's
-- much too fast for the UART to sample.
-- instead use a dedicated output word atx_ctrl.
    009a : 4a01 ; -- <0196> atx_ctrl = $atx_load_mask

-- wait until UART is busy, as acknowledgement.
    009b : 0202 ; -- <0199> a = $atx_busy_mask
-- :pcatx_wait_for_busy -- = 0x009c
    009c : 0412 ; -- <0201> b = atx_ctrl
    009d : e002 ; -- <0202> br and0z :pcatx_wait_for_busy
    009e : 009c ; -- <0202> "

    009f : 4a00 ; -- <0204> atx_ctrl = 0
    00a0 : 1008 ; -- <0205> pop x -- return
    00a1 : fc00 ; -- <0205> return

