    001b : 0e01 ; -- <0084> j = 1
-- :loadword -- = 0x001c
    001c : 0241 ; -- <0086> a = 65 -- putasc A
    001d : fba0 ; -- <0086> putasc A
    001e : 0092 ; -- <0086> "
    001f : fc00 ; -- <0086> "
    0020 : 0002 ; -- <0087> a = i
