<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.UARTTest.CarActivity">

        <view class="com.example.x.app.CustomGaugeMasterView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/brake_fl_gage"
            app:scale_min="0" app:scale_max="600"
            app:color_1="#f0a0" app:color_1_max="250"
            app:color_2="#fcc0" app:color_2_min="270" app:color_2_max="400"
            app:color_3="#fc00" app:color_3_min="420"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <view
            class="com.example.x.app.CustomGaugeMasterView"
            app:scale_min="0"
            app:scale_max="600"
            app:color_1="#f0a0"
            app:color_1_max="250"
            app:color_2="#fcc0"
            app:color_2_min="270"
            app:color_2_max="400"
            app:color_3="#fc00"
            app:color_3_min="420"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/brake_fr_gage"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true" />

    <view
        class="com.example.x.app.CustomGaugeMasterView"
        app:scale_min="0"
        app:scale_max="600"
        app:color_1="#f0a0"
        app:color_1_max="250"
        app:color_2="#fcc0"
        app:color_2_min="270"
        app:color_2_max="400"
        app:color_3="#fc00"
        app:color_3_min="420"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/engine_temp_gage"
        android:layout_below="@+id/brake_fr_gage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TimeStamp"
        android:id="@+id/timestamp_txt"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulate"
        android:id="@+id/sim_chk"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/brake_fr_gage"
        android:checked="false"
        android:onClick="sim_change" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="console"
        android:id="@+id/cons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
