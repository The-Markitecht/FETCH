<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.UARTTest.CarActivity"
    android:background="@drawable/drivetrain1_blk">

    <view class="com.example.x.app.CustomGaugeMasterView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/brake_fl_gage"
        app:scale_min="0" app:scale_max="600"
        app:color_1="#f0a0" app:color_1_max="250"
        app:color_2="#fcc0" app:color_2_min="270" app:color_2_max="400"
        app:color_3="#fc00" app:color_3_min="420"
        app:text_size="35"
        app:text_thickness="3.2"
        app:dial_thickness="10"
        app:pointer_thickness="36"
        android:layout_marginTop="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <view
        class="com.example.x.app.CustomGaugeMasterView"
        app:scale_min="0"
        app:scale_max="600"
        app:color_1="#f0a0"
        app:color_1_max="250"
        app:color_2="#fcc0"
        app:color_2_min="270"
        app:color_2_max="400"
        app:color_3="#fc00"
        app:color_3_min="420"
        app:text_size="35"
        app:text_thickness="3.2"
        app:dial_thickness="10"
        app:pointer_thickness="36"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/brake_fr_gage"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/brake_fl_gage" />

    <view
        class="com.example.x.app.CustomGaugeMasterView"
        app:scale_min="0"
        app:scale_max="600"
        app:color_1="#f0a0"
        app:color_1_max="250"
        app:color_2="#fcc0"
        app:color_2_min="270"
        app:color_2_max="400"
        app:color_3="#fc00"
        app:color_3_min="420"
        app:text_size="35"
        app:text_thickness="3.2"
        app:dial_thickness="10"
        app:pointer_thickness="36"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/engine_temp_gage"
        android:layout_above="@+id/cons"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TimeStamp"
        android:id="@+id/timestamp_txt"
        android:layout_above="@+id/sim_chk"
        android:layout_alignParentRight="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulate"
        android:id="@+id/sim_chk"
        android:layout_alignParentBottom="true"
        android:checked="false"
        android:onClick="sim_change"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="console"
        android:id="@+id/cons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
